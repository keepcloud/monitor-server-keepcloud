{
    "esm": {
        "version": "2.5",
        "website": "https://keepcloud.io",
        "check_updates": true,
        "auto_refresh": 0,
        "theme": "blue",
        "custom_title": ""
    },
    "cpu": {
        "enable_temperature": true
    },
    "disk": {
        "show_tmpfs": false,
        "show_filesystem": true
    },
    "ping": {
        "hosts": [
            "facebook.com",
            "google.com",
            "yahoo.com"
        ]
    },
    "last_login": {
        "enable": false,
        "max": 5
    },
    "services": {
        "show_port": true,
        "list": [
            {
                "name": "Web Server (HTTP)",
                "host": "localhost",
                "port": 80,
                "protocol": "tcp"
            },
            {
                "name": "Web Server (HTTPS)",
                "host": "localhost",
                "port": 443,
                "protocol": "tcp"
            },
            {
                "name": "Server Redis",
                "host": "localhost",
                "port": 6379,
                "protocol": "tcp"
            },
            {
                "name": "Email Server (SMTP)",
                "host": "localhost",
                "port": 25,
                "protocol": "tcp"
            },
            {
                "name": "Database Server",
                "host": "localhost",
                "port": 3306,
                "protocol": "tcp"
            },
            {
                "name": "SSH",
                "host": "localhost",
                "port": 22,
                "protocol": "tcp"
            }
        ]
    }
}